@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Time</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cidade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnoFundacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnoFundacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estadio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estadio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CapacidadeEstadio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CapacidadeEstadio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CorPrimaria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CorPrimaria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CorSecundaria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CorSecundaria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>

    <h4>Jogadores</h4>
    @if (Model.Jogadores != null && Model.Jogadores.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Posição</th>
                    <th>Data de Nascimento</th>
                    <!-- Adicione outros campos se quiser -->
                </tr>
            </thead>
            <tbody>
                @foreach (var jogador in Model.Jogadores)
                {
                    <tr>
                        <td>@jogador.Nome</td>
                        <td>@jogador.Posicao</td>
                        <td>@jogador.DataNascimento.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há jogadores cadastrados para este time.</p>
    }


    <h4>Comissão Técnica</h4>
    @if (Model.ComissaoTecnica != null && Model.ComissaoTecnica.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cargo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var membro in Model.ComissaoTecnica)
                {
                    <tr>
                        <td>@membro.Nome</td>
                        <td>@membro.Cargo</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há membros da comissão técnica cadastrados para este time.</p>
    }

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
