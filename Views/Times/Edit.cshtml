@model LigaTabajara.Models.Time

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-2xl font-semibold mb-6">Editar Time</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md">
        <h4 class="text-xl font-semibold mb-4">Edição de Time</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Nome -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Cidade -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Estado -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Ano de Fundação -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.AnoFundacao, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.AnoFundacao, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.AnoFundacao, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Estádio -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.Estadio, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.Estadio, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.Estadio, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Capacidade do Estádio -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.CapacidadeEstadio, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.CapacidadeEstadio, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.CapacidadeEstadio, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Cor Primária -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.CorPrimaria, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.CorPrimaria, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.CorPrimaria, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Cor Secundária -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.CorSecundaria, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EditorFor(model => model.CorSecundaria, new { htmlAttributes = new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" } })
                @Html.ValidationMessageFor(model => model.CorSecundaria, "", new { @class = "text-danger mt-1" })
            </div>

            <!-- Status -->
            <div class="flex flex-col mb-6">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "font-medium text-gray-700" })
                @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "mt-1 p-2 border border-gray-300 rounded-lg" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger mt-1" })
            </div>
        </div>

        <!-- Botão de Enviar -->
        <div class="flex justify-center mt-6">
            <input type="submit" value="Salvar" class="bg-blue-500 text-white p-2 rounded-md cursor-pointer hover:bg-blue-600" />
        </div>
    </div>
}

<div class="mt-4">
    @Html.ActionLink("Voltar para a Lista", "Index", new { @class = "text-blue-500 hover:text-blue-700" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
