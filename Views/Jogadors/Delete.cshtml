# Página de Exclusão de Jogador

```html
@model LigaTabajara.Models.Jogador
@{
    ViewBag.Title = "Excluir Jogador";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Excluir Jogador</h2>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
            <div class="mb-6">
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-red-500"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-medium text-red-800">
                                Tem certeza que deseja excluir este jogador?
                            </h3>
                            <p class="text-red-700 mt-1">
                                Esta ação não pode ser desfeita. Todos os dados associados a este jogador serão removidos permanentemente.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-col md:flex-row">
                <div class="w-full md:w-1/4 mb-4 md:mb-0 md:pr-4">
                    <div class="bg-gray-100 rounded-lg p-4 text-center">
                        <div class="inline-block w-24 h-24 rounded-full bg-gray-800 text-white flex items-center justify-center font-bold text-3xl mb-2">
                            @Model.NumCamisa
                        </div>
                        <h3 class="text-xl font-bold">@Model.Nome</h3>
                        <p class="text-gray-600">@Model.Nacionalidade</p>
                        <p class="text-blue-600 font-medium">@Model.Time.Nome.ToString()</p>
                    </div>
                </div>

                <div class="w-full md:w-3/4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-6">
                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Time</p>
                            <p class="text-gray-900">@Model.Time.Nome</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Nome</p>
                            <p class="text-gray-900">@Model.Nome</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Data de Nascimento</p>
                            <p class="text-gray-900">
                                @Model.DataNascimento.ToShortDateString()
                                @{
                                    var idade = DateTime.Now.Year - Model.DataNascimento.Year;
                                    if (DateTime.Now.DayOfYear < Model.DataNascimento.DayOfYear) { idade--; };
                                }
                                <span class="text-sm text-gray-500">(@idade anos)</span>
                            </p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Nacionalidade</p>
                            <p class="text-gray-900">@Model.Nacionalidade</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Posição</p>
                            <p class="text-gray-900">@Model.Posicao</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Número da Camisa</p>
                            <p class="text-gray-900">@Model.NumCamisa</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Altura</p>
                            <p class="text-gray-900">@Model.Altura m</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Peso</p>
                            <p class="text-gray-900">@Model.Peso kg</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Pé Preferido</p>
                            <p class="text-gray-900">@Model.PePreferido</p>
                        </div>

                        <div class="border-b pb-2">
                            <p class="text-sm font-medium text-gray-500">Gols</p>
                            <p class="text-gray-900 font-bold">@Model.Gols</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end mt-6 space-x-2">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition">
                        <i class="fas fa-trash mr-1"></i> Excluir
                    </button>
                }
                <a href="@Url.Action("Index")" class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition">
                    Cancelar
                </a>
            </div>
        </div>
    </div>
</div>
