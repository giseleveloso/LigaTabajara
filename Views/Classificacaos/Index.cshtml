
@model IEnumerable<LigaTabajara.Models.Classificacao>
@{
    ViewBag.Title = "Classificação";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Classificação</h2>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full border-collapse">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">Pos.</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">Time</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">P</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">V</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">E</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">D</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">GP</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">GC</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700 border-b-2 border-gray-200">SG</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int posicao = 1;
                    }
                    @foreach (var c in Model)
                    {
                        string rowClass = "";
                        if (posicao <= 4)
                        {
                            rowClass = "bg-blue-50";
                        }
                        else if (posicao >= Model.Count() - 3)
                        {
                            rowClass = "bg-red-50";
                        }
                        <tr class="hover:bg-gray-50 @rowClass">
                            <td class="py-3 px-4 border-b border-gray-200 text-center font-bold">@(posicao++)</td>
                            <td class="py-3 px-4 border-b border-gray-200 font-medium text-gray-900">
                                <a href="@Url.Action("Details", "Times", new { id = c.Time.Id })" class="text-blue-600 hover:text-blue-800">
                                    @c.Time.Nome
                                </a>
                            </td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center font-bold">@c.Pontos</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center">@c.Vitorias</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center">@c.Empates</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center">@c.Derrotas</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center">@c.GolsPro</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center">@c.GolsContra</td>
                            <td class="py-3 px-4 border-b border-gray-200 text-center font-bold">@c.SaldoGols</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="p-4 text-sm">
            <div class="flex space-x-4">
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-blue-50 mr-2 border border-gray-200"></div>
                    <span>Zona de classificação</span>
                </div>
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-red-50 mr-2 border border-gray-200"></div>
                    <span>Zona de rebaixamento</span>
                </div>
            </div>
        </div>
    </div>
</div>